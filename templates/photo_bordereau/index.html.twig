{% extends 'base.html.twig' %}

{% block title %}Photo Bordereau
{% endblock %}

{% block body %}
	{% for message in app.flashes('notice') %}
		<div class="flash-notice">
			<p class="text-warning my-5 fs-1 mx-2 fw-bold text-center">{{ message }}</p>
		</div>
	{% endfor %}
	<form method="post" enctype="multipart/form-data" action="{{ path('app_photo_bordereau') }}">
		<h1 class="text-white my-5 fs-1 fw-bold text-center">Faire une photo du bordereau</h1>
		<div class="m-1">
			<div class='d-flex flex-column'>
				<div class="input-group">
					<label class="input-group-text" for="photoInput">Photo</label>
					<input type="file" accept="image/*" capture="camera" id="photoInput" class="form-control m-0" name="photo" required />
				</div>
			</div>
		</div>
		<div class='d-flex flex-column mt-3'>
			<div class='d-flex justify-content-center'>
				<label for="Textarea-bordereau">
					<span class='fs-2 fw-bold text-warning'>Commentaires</span>
				</label>
			</div>
			<div class='d-flex justify-content-center mx-2'>
				<textarea class="form-control mt-3 fs-2 fw-bold border-2 border-warning" id="Textarea-bordereau" style="height: 150px; width: 300px;" name="commentaire"></textarea>
			</div>
		</div>
		<div class='d-flex justify-content-center mx-2'>
			<button type="submit" class="btn btn-outline-warning my-5 border-2 rounded-5">
				<span class='fs-2 fw-bold'>Enregistrer</span>
			</button>
		</div>
	</form>
{% endblock %}
